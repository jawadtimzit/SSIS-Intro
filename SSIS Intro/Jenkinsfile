pipeline {
    agent any

    environment {
        SOLUTION_FILE = "SSIS Intro.sln"
        VS_PATH = "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\IDE\\devenv.com"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build SSIS Project with devenv') {
            steps {
                script {
                    def solution = "\"${env.SOLUTION_FILE}\""
                    def devenv = "\"${env.VS_PATH}\""

                    // Build using Visual Studio IDE (devenv)
                    bat "${devenv} ${solution} /Rebuild Development"
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/*.dtsx', allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            echo "SSIS build completed successfully using devenv."
        }
        failure {
            echo "Build failed. Check console output for details.."
        }
    }
}